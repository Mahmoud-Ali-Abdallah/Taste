@page "/Customer/Home/Index"

@inject IMenuItemService _menuItemService
@inject ICategoryService _categoryService

@if (CategoryList != null)
{

    @foreach (var cat in CategoryList)
    {
        if (MenuItemList.Where(c => c.CategoryId == cat.Id).Count() > 0)
        {
            <div class="row container pb-3 backgroundWhite">
                <div class="col-12">
                    <div class="row">
                        <h2 class="text-success pl-1">@cat.Name</h2>

                        <div class="col-12">
                            <div class="row my-3">
                                @foreach (var menuItem in MenuItemList.Where(c => c.CategoryId == cat.Id))
                                {
                                    <div class="col-lg-3 col-xl-3 pb-4">
                                        <div class="card" style="border:2px solid #008cba;border-radius:5px">
                                            <div class="pl-3 pt-1 text-center">
                                                <div class="card-title text-primary">
                                                    <b>@menuItem.Name</b>
                                                </div>
                                            </div>
                                            <div class="d-flex justify-content-between form-control">
                                                <div class="col-6 badge badge-warning text-center" style="font-size:14px">
                                                    @menuItem.Category.Name
                                                </div>
                                                <div class="col-6 text-right h4" style="color:maroon">
                                                    <b>@menuItem.Price</b>
                                                </div>
                                            </div>
                                            <img src="@menuItem.Image" class="card-img-top p-2 rounded" />

                                            <a href="" class="btn btn-primary" style="border-radius:2px">Details</a>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }

}
else
{
<div class="loader" style="display:flex;justify-content: center;vertical-align:middle;align-items:center;padding-top:5%">
    <img src="/Images/loading bg-Gray1.gif" />
</div>
}


@code {

    public IEnumerable<MenuItemModel> MenuItemList { get; set; }

    public IEnumerable<CategoryModel> CategoryList { get; set; }

    protected override async Task OnInitializedAsync()
    {
        MenuItemList = await _menuItemService.GetMenuItems();

        CategoryList = await _categoryService.GetCategories();
    }

}
