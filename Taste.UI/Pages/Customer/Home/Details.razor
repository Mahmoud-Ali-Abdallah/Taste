@page "/Customer/Home/Detail"
@inject IMenuItemService _menuItemService


<div class="">
    <form method="post">
        <div class="container backgroundWhite">
            <div class="card">
                <div class="card-header bg-light text-light ml-0 row container">
                    <div class="col-12 col-md-6">
                        <h1 class="text-primary">@ShoppingCart.MenuItemModel.Name</h1>
                    </div>
                    <div class="col-12 col-md-6 text-md-right">
                        <h1 class="text-muted"> @ShoppingCart.MenuItemModel.Price.ToString("c")</h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-8">
                                <div class="row">

                                    <div class="col-12">
                                        <span class="badge badge-warning h3">Desert</span>
                                        <span class="badge badge-dark">Veg</span>
                                        <h3 class="text-success"></h3>

                                        <p class="text-secondary">Description</p>

                                        <div class="row py-4">
                                            <div class="col-2">Count</div>
                                            <div class="col-10"> 10 </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="https://via.placeholder.com/150" width="100%" class="rounded" />
                            </div>


                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1 ">
                            <a class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Back to List</a>
                        </div>
                        <div class="col-12 col-md-6 ">
                            <button type="submit" class="btn btn-primary btn-square form-control btn-lg" style="height:50px;">Add to Cart</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@code {

    [Parameter]
    public int MenuItemId { get; set; }

    public ShoppingCartModel ShoppingCart { get; set; }

    public MenuItemModel MenuItemModel { get; set; }

    protected async override Task OnAfterRenderAsync(bool firstRender)
    {
        MenuItemModel = await _menuItemService.GetMenuItemById(MenuItemId);

        ShoppingCart = new ShoppingCartModel()
        {
            MenuItemModel = MenuItemModel,
            MenuItemId = MenuItemModel.Id

        };

    }

}
