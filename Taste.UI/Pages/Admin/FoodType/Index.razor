@page "/Admin/FoodType/Index"
@inject IFoodTypeService _foodTypeService
@inject IJSRuntime  _js
@inject Blazored.Toast.Services.IToastService ToastService

@implements IAsyncDisposable

<div class="border backgroundWhite container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Food Type List</h2>
        </div>
        <div class="col-6" style="text-align:end">
            <a href="/Admin/FoodType/Upsert" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp;Create New</a>
        </div>
    </div>
    <br /><br />
    <table id="foodTypeList" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Category Name</th>
                
                <th></th>
            </tr>
        </thead>
        <tbody>

            @if (foodTypes != null) //&& categories.Count > 0)
            {
                //LoadDataTable();

                @foreach (var foodType in foodTypes)
                {
                    <tr>
                        <td>@foodType.Name</td>
                        
                        <td>
                            <a href="/Admin/FoodType/Upsert/@foodType.Id" class="btn btn-success"><i class="fas fa-edit"></i> Edit</a>
                            <a @onclick="() => DeleteCategory(foodType.Id)" class="btn btn-danger" style="color:white"><i class="fas fa-trash-alt"></i> Delete</a>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>

@code {

    // Load the module and keep a reference to it
    // You need to use .AsTask() to convert the ValueTask to Task as it may be awaited multiple times
    private Task<IJSObjectReference> _module;
    private Task<IJSObjectReference> Module => _module ??=
        _js.InvokeAsync<IJSObjectReference>("import", "./js/category.js").AsTask();

    IJSObjectReference module;

    List<FoodTypeModel> foodTypes = new();

    protected async override Task OnInitializedAsync()
    {


    }

    protected async override Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            foodTypes = (await _foodTypeService.GetFoodTypes()).ToList();
            StateHasChanged();
            module = await Module;

            await module.InvokeVoidAsync("initializeDataTable", "foodTypeList");

        }
    }



    private async Task DeleteCategory(int catId)
    {
        //await _js.InvokeVoidAsync("Swal.fire" , "Are you sure ?");

        if (await _js.Confirm("Confirm", $" Do you want to delete {catId}  ?", SweetAlertMessageType.Question))
        {
            bool isDeletedSuccessfully = await _foodTypeService.DeleteFoodType(catId);

            if (isDeletedSuccessfully)
            {
                foodTypes.RemoveAll(cat => cat.Id == catId);

                await module.InvokeVoidAsync("initializeDataTable" , "foodTypeList");

                // Display successful message
                ToastService.ShowSuccess("Removed successfuly");

                StateHasChanged();
            }
            else
            {
                // Display toast danger Message
            }


        }


    }

    public async ValueTask DisposeAsync()
    {
        if (_module != null)
        {
            var module = await _module;
            await module.DisposeAsync();
        }
    }


}
