@page "/Admin/Category/Upsert/{CategoryId:int?}"

@inject ICategoryService _categoryService


<EditForm Model="@category" OnValidSubmit="@AddOrUpdate">
    <DataAnnotationsValidator />

    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">
            @if (CategoryId != null)
            {
                <input type="hidden" @bind-value="@category.Id" />
            }

            <div class="col-12 px-3" style="border-bottom:1px solid #325d88">
                <h2 class="text-primary">@(CategoryId != null ? "Update " : "Create ") Category</h2>
            </div>

            <div class="col-8 pt-3">
                <div class="form-group row">
                    <div class="col-3">
                        <label for="">Category Name</label>
                    </div>

                    <div class="col-9">
                        <InputText @bind-Value="@category.Name" maxlength="50" class="form-control" />
                        <ValidationMessage For="@(() => category.Name)" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label for="">Display Order</label>
                    </div>

                    <div class="col-9">
                        <InputNumber @bind-Value="@category.DisplayOrder" maxlength="50" class="form-control" />
                        <ValidationMessage For="@(() => category.DisplayOrder)" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-9 offset-3">
                        <div class="row">
                            <div class="col-6">
                                @if (CategoryId != null)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>

                                }
                            </div>
                            <div class="col-6">
                                <a href="/Admin/Category/Index" class="btn btn-success form-control">Back to list</a>
                            </div>
                        </div>
                    </div>


                </div>

            </div>

        </div>
    </div>

</EditForm>

